@using WEB.Models.Enuns
@using WEB.Models.ViewModels
@model UsuarioVm

@{
    var title = ViewBag.Title;
    var regiao = ViewBag.Regiao;
    var igreja = ViewBag.Igreja;
}

<form asp-action="AlterarUsuario" enctype="multipart/form-data">
    <div id="modalAdicionar" data-bs-backdrop="static" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- HEADER -->
                <div class="modal-header" style="background-color: #628dbc;">
                    <h5 class="modal-title text-white">@title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body">

                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="hidden" asp-for="Senha" />
                    <input type="hidden" asp-for="ConfirmarSenha" />

                    <!-- SEÇÃO 1 =============================== -->
                    <h5 class="border-bottom pb-2 mb-3">Dados Pessoais</h5>

                    <div class="row mb-4">
                        <div class="mb-3">
                            <label>Nome</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Senha</label>
                                <input asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label>Confirmar Senha</label>
                                <input asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme a senha" />
                                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                            </div>
                        </div>


                        <!-- Região -->
                        <div class="mb-3">
                            <label>Região</label>
                            <select asp-for="RegiaoId" class="input-custom form-select form-control select2bs4 p-2">
                                <option value="" disabled selected>Selecione</option>
                                @foreach (var item in regiao)
                                {
                                    <option value="@item.RegiaoId">@item.Nome</option>
                                }
                            </select>
                        </div>

                        <!-- Igreja -->
                        <div class="mb-3">
                            <label>Igreja</label>
                            <select asp-for="IgrejaId" class="input-custom form-select form-control select2bs4 p-2">
                                <option value="" disabled selected>Selecione</option>
                                @foreach (var item in igreja)
                                {
                                    <option value="@item.IgrejaId">@item.Nome</option>
                                }
                            </select>
                        </div>   
                        
                        <div class="mb-3">
                            <label>Perfil</label>
                            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-select"></select>
                        </div>
                    </div>

                    <!-- FOOTER -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>