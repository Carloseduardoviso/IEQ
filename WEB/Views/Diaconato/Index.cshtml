@using WEB.Models.ViewModels
@model IEnumerable<DiaconatoVm>
@{
    var ss = Model;
    var te = 0;
}

<div class="container mt-4">
    <div class="card border-0 shadow-lg p-3 mb-5 rounded">
        <div class="d-flex justify-content-between p-3 border-bottom">
            <h4 class="card-title text-muted"><strong>Diaconato</strong></h4>
            <button type="button" id="btnNovo" data-url="@Url.Action("Cadastrar", "Diaconato")" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Novo
            </button>
        </div>
        <div class="card-body table-responsive">
            <section class="conteudo-inicial mx-auto">
                <div>
                    <form asp-action="Index" asp-controller="Diaconato" method="get" class="d-flex flex-wrap flex-column flex-lg-row" style="gap: 20px; margin-bottom: 20px;">
                        <div style="flex-grow: 4;">
                            <label class="form-label"><strong>Busca por</strong></label>
                            <input type="text" class="form-control" name="NomeAndSigla" placeholder="Digite o nome ou sigla" />
                        </div>

                        <div class="d-flex gap-2 justify-content-md-end align-items-end flex-column flex-lg-row">
                            <button type="submit" class="btn btn-primary">Pesquisar</button>
                            <a href="@Url.Action("Index", "Diaconato")" class="btn btn-warning">Limpar Busca</a>
                        </div>
                    </form>
                </div>
            </section>
            <table id="tableEstado" class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Igreja</th>
                        <th>Região</th>
                        <th>Cargo</th>
                        <th>Ativo</th>
                        <th width="15%">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FotoUrl))
                                    {
                                        <img src="@item.FotoUrl" style="width:50px; height:50px; object-fit:cover; border-radius:6px;" />
                                    }
                                    else
                                    {
                                        <img src="~/images/Home/foto_padrao.png" style="width:50px; height:50px; object-fit:cover; border-radius:6px;" />
                                    }
                                </td>
                                <td>@item.NomeCompleto</td>
                                <td>@item.Igreja</td>
                                <td>@item.Regiao</td>
                                <td>@item.Cargo</td>
                                <td>
                                    <span class="badge @(item.Ativo ? "bg-success" : "bg-danger") px-3">
                                        @(item.Ativo ? "Sim" : "Não")
                                    </span>
                                </td>
                                <td>
                                    @if (item.Ativo)
                                    {
                                        <a class="btn btn-light btn-sm edit-button" title="Editar"
                                           data-id="@item.DiaconatoId"
                                           data-url="@Url.Action("Cadastrar", "Diaconato")">
                                            <i class="fa-solid fa-pen-to-square text-primary"></i>
                                        </a>

                                        <a class="btn btn-light btn-sm remove-button" title="Excluír"
                                           data-url="@Url.Action("Excluir", "Diaconato", new { id = item.DiaconatoId })">
                                            <i class="fa-solid fa-trash text-danger"></i>
                                        </a>   
                                        <a class="btn btn-light btn-sm remove-button" title="Excluír"
                                           asp-action="Detalhe" asp-controller="Diaconato" asp-route-DiaconatoId="@item.DiaconatoId">
                                            <i class="fa-solid fa-eye text-primary"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-light btn-sm ativar-button" title="Ativar Obreiro"
                                           data-url="@Url.Action("Inativar", "Diaconato", new { id = item.DiaconatoId })">
                                            <i class="fa-solid fa-check text-success"></i>
                                        </a>                                   
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">Nenhum resultado encontrado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {   
    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.bootstrap5.js"></script>
    <script src="~/js/diaconato.js"></script>
}