<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IEQ</title>

    <!-- BOOTSTRAP (somente 1 versão — a oficial do projeto) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEB.styles.css" asp-append-version="true" />

    <!-- SweetAlert -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.min.css"
          rel="stylesheet" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div id="modal"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark ieq-navbar shadow">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <img src="~/images/home/logo_ieq.png" class="nav-logo" alt="IEQ">
                    IEQ
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarIEQ" aria-controls="navbarIEQ"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarIEQ">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link nav-link-ieq" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-ieq" asp-controller="Diaconato" asp-action="Index">
                                Diaconato
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <!-- ALTERADO PARA container-fluid E MAIOR ESPAÇAMENTO NO MOBILE -->
    <div class="container-fluid px-2 px-md-4">
        <main class="pb-5 pt-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER FIXO RESPONSIVO (SEM SOBREPOR CONTEÚDO) -->
    <footer class="border-top footer text-muted py-3 bg-light mt-auto">
        <div class="container text-center">
            &copy; 2025 - WEB - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap único (eliminado o duplicado) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.all.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
